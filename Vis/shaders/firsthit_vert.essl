#ifndef GL_ES
#version 330 es
#endif

uniform vec3 volume_scale;

out vec3 vEye;
out vec3 vDir;

void main() {
    // calculate the ray and normalize
    vEye = vec4(cameraPosition, 1.0).xyz / volume_scale;
    vDir = (position / volume_scale) - vEye;

    gl_Position = projectionMatrix * modelViewMatrix * vec4(position, 1.0);
}